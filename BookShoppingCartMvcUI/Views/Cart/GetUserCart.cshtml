@model ShoppingCart
@{
    ViewData["Title"] = "GetUserCart";
}

<div style="width:100%;margin:auto" class="mt-3">
    @if (Model != null && Model.cartDetails != null && Model.cartDetails.Count > 0)
    {
        <table class="table table-striped">
            <tr>
                <th>Название</th>
                <th>Книга</th>
                <th>Жанр</th>
                <th>Цена за единицу</th>
                <th>Итоговая цена</th>
                <th>На складе</th>
                <th>Добавить/Удалить</th>
            </tr>
            @foreach (var item in Model.cartDetails)
            {
                <tr>
                    <td>@item.Book.BookName</td>
                    <td style="width:300px">
                        @if (!string.IsNullOrEmpty(item.Book.Image))
                        {
                            <img src="/Images/@item.Book.Image" class="card-img-top" style="height: 125px" alt="...">
                        }
                        else
                        {
                            <img src="/Images/NoImage.jpeg" class="card-img-top" style="height: 125px" alt="....">
                        }
                    </td>
                    <td>@item.Book.Genre.GenreName</td>
                    <td>@item.Book.Price X 
                        @if(item.Quantity > item.Book.Stock.Quantity)
                        {                            
                            <span style="color:red">@item.Quantity</span>
                        }
                        else
                        {
                            @item.Quantity
                        }
                    </td>
                    <td>@(item.Book.Price * item.Quantity)</td>
                    <td>@(item.Book.Stock.Quantity)</td>
                    <td>
                        @if(item.Quantity < item.Book.Stock.Quantity)
                        {
                            <a class="btn" href="/Cart/AddItem?bookId=@item.BookId&&redirect=1" style="background-color:black; color: white">+</a>
                        }
                        else
                        {
                            <a class="btn" style="background-color:dimgray; color: lightgray">+</a>
                        }
                        @* Decrement button *@
                        <a class="btn" href="/cart/removeitem?bookid=@item.BookId" style="background-color:black; color:red">-</a>
                    </td>
                </tr>

         }
        </table>

        <div class="my-3 h2">
            Итог: 
            @(Model.cartDetails.Select(item => item.Book.Price * item.Quantity).Sum())
        </div>

        <div class="my-3">

            @if(Model.cartDetails.Where(item => item.Quantity > item.Book.Stock.Quantity).Count() > 0)
            {
                <a class="btn btn-primary" style="background-color:dimgray; color: lightgray">Оплатить</a>
            }
            else
            {
                <a class="btn btn-primary" href="/Cart/Checkout" style="color: white">Оплатить</a>
            }

        </div>
    }
    else
    {
        <h5>Ваша козина пуста.</h5>
    }
</div>