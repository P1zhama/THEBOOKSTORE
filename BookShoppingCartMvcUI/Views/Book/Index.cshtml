@model IEnumerable<Book>

<h2 class="m-3 mt-4" >Книги</h2>

<a asp-action="AddBook" asp-controller="Book" class="brn btn-primary m-3" style="font-size:20px"> Добавить книгу </a>

@if(Model?.Count() > 0)
{
    <table class="table table-striped my-2" style="width:90%">
        <tr>
            <th>Книга</th>
            <th>Название</th>
            <th>Автор</th>
            <th>Жанр</th>
            <th>Цена</th>
            <th>Редактировать / Удалить</th>
        </tr>
        
        @foreach(var book in Model)
        {
            <tr>
                <td>
                    @if(string.IsNullOrWhiteSpace(book.Image))
                    {
                        <img src="/Images/NoImage.jpeg" class="card-img-top" style="width:250px;height:130px" alt="...">
                    }
                    else
                    {
                        <img src="/Images/@book.Image" class="card-img-top" style="width:250px;height:130px" alt="...">
                    }
                </td>
                <td>@book.BookName</td>
                <td>@book.AuthorName</td>
                <td>@book.Genre.GenreName</td>
                <td>@book.Price</td>
                <td>
                    <a asp-action="UpdateBook" asp-controller="Book" asp-route-id="@book.Id" class="btn btn-success" style="width: 200px; height:50px; text-align:center; ">Редактировать</a>
                    <a asp-action="DeleteBook" asp-controller="Book" asp-route-id="@book.Id" class="btn btn-danger mt-2" onclick="return window.confirm('Вы уверены?')" style="width: 200px; height:50px; text-align:center;">Удалить</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h5>В базе данных книг нет.</h5>
}